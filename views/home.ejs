<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <style>
        /* General styles */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #f6f6f6;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Styles for header */
        h1 {
            color: #333;
            text-align: center;
        }

        /* Styles for form */
        form {
            margin-bottom: 20px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 600px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        form label {
            flex: 1;
            margin-right: 10px;
        }
        form input[type="text"] {
            flex: 2;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }
        form button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        form button:hover {
            background-color: #45a049;
        }

        /* Styles for generated URL section */
        .generated-url {
            margin-top: 20px;
            background-color: #fff;
            padding: 10px;
            border-radius: 4px;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 600px;
            overflow-wrap: break-word;
            text-align: center;
        }
        .generated-url a {
            color: #007bff;
            text-decoration: none;
            word-break: break-all;
        }

        /* Styles for table */
        .styled-table {
            border-collapse: collapse;
            width: 100%;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-top: 20px;
        }
        .styled-table th, .styled-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        .styled-table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        .styled-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .styled-table tbody tr:hover {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    <h1>URL Shortener</h1>

    <form method="POST" action="/url">
        <label for="url">Enter your original URL:</label>
        <input type="text" id="url" name="url" placeholder="www.example.com" required>
        <button type="submit">Generate</button>
    </form>

    <% if (locals.id) { %>
    <div class="generated-url">
        <p>URL Generated: <a href="http://localhost:8001/url/<%= id %>">http://localhost:8001/url/<%= id %></a></p>
    </div>
    <% } %>

    <div>
        <% if (locals.urls && locals.urls.length > 0) { %>
        <table class="styled-table">
            <thead>
                <tr>
                    <th>S.N</th>
                    <th>ShortID</th>
                    <th>Redirect URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.shortId %></td>
                    <td><a href="<%= url.redirectUrl %>"><%= url.redirectUrl %></a></td>
                    <td><%= url.visitHistory.length %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p>No URLs generated yet.</p>
        <% } %>
    </div>
</body>
</html>
